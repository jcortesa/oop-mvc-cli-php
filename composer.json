{
  "name": "jcortesa/oop-mvc-cli",
  "description": "OOP MVC CLI Application",
  "type": "project",
  "license": "MIT",
  "homepage": "https://github.com/jcortesa/oop-mvc-cli-php",
  "require": {
    "php": "^8.4",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "stable"
}